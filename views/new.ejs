<%include partials/header.ejs%>
<div class="container">
	<div class="row">
		<h2 style:"text-align: center;">Add new campground</h2>
		<div style:width:30%;margin: 25px auto;>
			<form action="/campgrounds" method="post">
				<div class="form-group">
					<input class="form-control col-lg-4" type="text" name="name" placeholder="Name">
				</div>
				<div class="form-group">
					<input class="form-control col-lg-4" type="text" name="image" placeholder="Image">
				</div>
				<div class="form-group">
					<input class="form-control col-lg-4" type="text" name="description" placeholder="Describe the camp">
				</div>
				<button class="btn btn-lg btn-primary">Submit</button>
			</form>
			<a href="/campgrounds">Back</a>
		</div>
	</div>
</div>
